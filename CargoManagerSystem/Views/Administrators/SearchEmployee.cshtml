@model IEnumerable<CargoClass.Employee>

@{

    ViewBag.Title = "Search Employee";

}

<h2>Search Employee</h2>

<!-- Search Form -->
<form method="post" action="@Url.Action("SearchEmployee", "Administrators")">
    <div class="form-group">
        <label for="searchQuery">Search by Name or Email:</label>
        <input type="text" id="searchQuery" name="searchQuery" class="form-control" placeholder="Enter employee name or email" required />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<!-- Search Results -->

@if (Model != null && Model.Any())

{
    <h3>Search Results:</h3>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Role)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Address)</th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)

        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Role</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>

                    @Html.ActionLink("Edit", "UpdateEmployee", "Administrators", new { id = item.EmployeeId }, new { @class = "btn btn-warning" })
                </td>
            </tr>

        }
    </table>

}

else

{
    <p>No results found.</p>

}

<!-- Back to Employee List -->
<p>

    @Html.ActionLink("Back to Employee List", "EmployeeList", "Administrators", null, new { @class = "btn btn-secondary" })
</p>

