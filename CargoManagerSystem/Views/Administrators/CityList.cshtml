<h2>CityList</h2>

@model IEnumerable<CargoClass.City>

@{

    ViewBag.Title = "CityList";

}

<h2>CityList</h2>

<p>

    @Html.ActionLink("Create New City", "AddCity", "Administrators", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>

            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.PricePerKm)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.PricePerKm)
            </td>
            <td>

                @Html.ActionLink("Edit", "UpdateCity", "Administrators", new { id = item.Id }, new { @class = "btn btn-warning" })

                @*@Html.ActionLink("Details", "Details", new { id=item.CityId }) |

                    @Html.ActionLink("Delete", "Delete", new { id=item.CityId })*@
            </td>
        </tr>

    }

</table>

<p>
    @Html.ActionLink("Back to Dashboard", "Index", "Administrators", null, new { @class = "btn btn-secondary" })
</p>

