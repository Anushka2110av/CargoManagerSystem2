@model IEnumerable<CargoClass.CargoOrder>

@{

    ViewBag.Title = "All Orders";

}

<h2>All Orders</h2>

@if (Model != null && Model.Any())

{
    <table class="table">
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Details</th>
            <th>Status</th>
            <th>Order Date</th>
        </tr>

        @foreach (var order in Model)

        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.CustomerID</td>
                <td>@order.CargoDetails</td>
                <td>@order.Status</td>
                <td>@order.OrderDate.ToShortDateString()</td>
            </tr>

        }
    </table>

}

else

{
    <p style="color:red; font-weight:bold;">No orders found.</p>

}

