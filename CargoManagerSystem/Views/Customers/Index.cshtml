@model IEnumerable<CargoClass.CargoOrder>

@{

    ViewBag.Title = "Customer Dashboard";

}

<h2>Welcome to Your cust Dashboard</h2>

<p>
    <a href="@Url.Action("CreateOrder", "Customers")" class="btn btn-primary">Place an Order</a>
    <a href="@Url.Action("TrackOrder", "Customers")" class="btn btn-warning">Track Order</a>
</p>

<h3>Past Orders</h3>

@if (Model != null && Model.Any())

{
    <table class="table">
        <tr>
            <th>Order Number</th>
            <th>Customer Name</th>
            <th>Destination</th>
            <th>Status</th>
            <th>Cargo Type</th>
            <th>Weight</th>
            <th>Volume</th>
            <th>Price</th>
            <th>Order Date</th>
        </tr>

        @foreach (var order in Model)

        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.CustomerName</td>
                <td>@order.Destination</td>
                <td>@order.Status</td>
                <td>@order.CargoType</td>
                <td>@order.Weight</td>
                <td>@order.Volume</td>
                <td>@order.Price</td>
                <td>@order.CreatedAt.ToShortDateString()</td>
            </tr>

        }
    </table>

}

else

{
    <p>No past orders found.</p>

}


