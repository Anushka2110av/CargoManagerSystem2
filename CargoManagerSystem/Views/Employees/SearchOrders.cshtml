
@{
    ViewBag.Title = "SearchOrders";
}

<h2>Search Orders</h2>

@model IEnumerable<CargoClass.CargoOrder>

<!-- Search Form -->
@using (Html.BeginForm())
{
    <div class="search-container">
        <input type="text" name="searchTerm" placeholder="Search by Order Number or Customer Name" class="search-input" />
        <input type="submit" value="Search" class="search-button" />
    </div>
}

<!-- Orders Table -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Customer Name</th>
            <th>Cargo Type</th>
            <th>Weight</th>
            <th>Volume</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.Customer.Name</td>
                <td>@order.CargoType</td>
                <td>@order.Weight</td>
                <td>@order.Volume</td>
                <td>@order.CreatedAt</td>
                <td>@order.UpdatedAt</td>
                <td>
                    @Html.ActionLink("Back to List", "DashBoard", null, new { @class = "btn btn-info btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Styling -->
<style>
    h2 {
        color: #333;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Search Bar Styles */
    .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .search-input {
        padding: 10px;
        font-size: 1rem;
        width: 300px;
        border-radius: 5px;
        border: 1px solid #ccc;
        margin-right: 10px;
    }

    .search-button {
        padding: 10px 20px;
        font-size: 1rem;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: #0056b3;
        }

    /* Table Styling */
    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .table td {
            background-color: #ffffff;
        }

    .table-bordered {
        border: 1px solid #ddd;
    }

    .table-striped tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    /* Action Button Styling */
    .btn {
        padding: 8px 12px;
        text-decoration: none;
        color: white;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-info {
        background-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
        }
</style>
