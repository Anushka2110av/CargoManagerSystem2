
@{
    ViewBag.Title = "CreateGatePass";
}

<h2>CreateGatePass</h2>

@model CargoClass.GatePass

<h2 class="text-center text-primary">🚛 Generate Gate Pass</h2>

<div class="container mt-4 p-4 shadow-lg rounded bg-light">
    <form asp-action="CreateGatePass" asp-controller="Employees" method="post" class="p-4">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label class="form-label fw-bold">📦 Cargo Order</label>
            @Html.DropDownList("CargoOrderId", ViewBag.CargoOrders as SelectList, "-- Select Cargo Order --", new { @class = "form-control border border-primary" })
            @Html.ValidationMessageFor(model => model.CargoOrderId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            <label class="form-label fw-bold">📄 Pass Type</label>
            <select name="PassType" class="form-control border border-primary">
                <option value="Entry">🚪 Entry</option>
                <option value="Exit">🚛 Exit</option>
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success fw-bold shadow-sm px-4 py-2">
                🎟️ Generate Gate Pass
            </button>
        </div>
    </form>
</div>

